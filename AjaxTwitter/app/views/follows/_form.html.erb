<button class="follow-toggle" 
  data-user-id="<%=user.id%>"
  
    <% if current_user.follows?(user) %>
      data-follow-state="followed"
      <% value='Unfollow' %>
    <% else %>
      data-follow-state="unfollowed"
      <% value='Follow' %>
    <% end %>
  type="button"><%= value %></button>



